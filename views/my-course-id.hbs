
<div id="courseID">
    <div id="courseID-leftPart" class="">
        <img src="{{course.image}}" id="courseID-image" alt="IMG">

        <div class='d-flex justify-content-between align-items-center'>
            <h3 id="courseID-date">{{formatDate course.date}}</h3>
            <h2 class="courseID-hour">{{formatHour course.date}}</h2>
        </div>

        <div class='d-flex justify-content-between align-items-center'>
            <h1 id="courseID-title">{{course.title}}</h1>
            <p id="courseID-Cat">{{course.category.category}}</p>
        </div>

 {{!-- <h4 id="courseID-location">Participants :</h4> --}}

        {{#each participants}}
        <img src="{{this.image}}" alt="" id="courseID-participants">
        {{/each}}
        <p id="courseID-description">{{course.description}}</p>
        {{!-- <li>
            <h1 id="courseId-price">{{course.price}}$ / pers</h1>
        </li> --}}



          <div class='d-flex justify-content-between align-items-center'>

        <div class='d-flex  align-items-center'>
